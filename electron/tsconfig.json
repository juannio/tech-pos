{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist-electron",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["node"],
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
